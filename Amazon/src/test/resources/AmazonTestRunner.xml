<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name ="AmazonTest">
    <test name = "Amazon Search By department with keyword">
        <parameter name = "keyword" value = "apple"/>
        <parameter name = "url" value = "https://www.amazon.com/"/>
        <classes>
            <class name = "search.AmazonSearch"/>
        </classes>
    </test>
    <test name = "Amazon Best Sellers">
        <parameter name = "url" value = "http://www.amazon.com"/>
        <classes>
            <class name = "search.BestSellers"/>
        </classes>
    </test>

</suite>